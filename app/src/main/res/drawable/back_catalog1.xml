<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Сильная тень -->
    <item android:left="6dp" android:right="6dp" android:top="0dp" android:bottom="12dp">
        <shape android:shape="rectangle">
            <solid android:color="#4405091B" /> <!-- Почти чёрная, но прозрачная -->
            <corners android:bottomLeftRadius="60dp" android:bottomRightRadius="60dp"/>
        </shape>
    </item>

    <!-- Основной белый блок с обводкой -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />

            <stroke android:width="1dp" android:color="#DEDEDE" />
            <corners android:bottomLeftRadius="60dp" android:bottomRightRadius="60dp" />
        </shape>
    </item>

</layer-list>

