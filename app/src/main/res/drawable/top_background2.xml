<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="-90"
                android:startColor="#050085"
                android:endColor="#070068"/>
            <corners
                android:bottomLeftRadius="40dp"
                android:bottomRightRadius="40dp"/>
        </shape>
    </item>


    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="700dp"
                android:centerX="9.0"
                android:centerY="0.5"
                android:endColor="#008BF692"
                android:centerColor="#00407CA2"
                android:startColor="#008BF692"/>
            <corners
                android:bottomLeftRadius="40dp"
                android:bottomRightRadius="40dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:gradientRadius="400dp"
                android:centerX="0.7"
                android:centerY="-0.25"
                android:centerColor="@color/our_blue"
                android:startColor="@color/our_blue"/>
            <corners
                android:bottomLeftRadius="40dp"
                android:bottomRightRadius="40dp"/>
        </shape>
    </item>

</layer-list>
