<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="-90"
                android:startColor="#030043"
                android:endColor="#00003C"/>
            <corners
                android:bottomLeftRadius="40dp"
                android:bottomRightRadius="40dp"/>
        </shape>
    </item>


    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="500dp"
                android:centerX="1.0"
                android:centerY="0.0"
                android:endColor="#008BF692"
                android:centerColor="#D9133862"
                android:startColor="#80B14EC8"/>
            <corners
                android:bottomLeftRadius="40dp"
                android:bottomRightRadius="40dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="600dp"
                android:centerX="0.9"
                android:centerY="0.1"
                android:endColor="#008BF692"
                android:centerColor="#80162280"
                android:startColor="#7376DC"/>
            <corners
                android:bottomLeftRadius="40dp"
                android:bottomRightRadius="40dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="350dp"
                android:centerX="0.0"
                android:centerY="1.12"
                android:endColor="#008BF692"
                android:startColor="#3981D9"/>
            <corners
                android:bottomLeftRadius="40dp"
                android:bottomRightRadius="40dp"/>
        </shape>
    </item>
</layer-list>
