<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="-90"
                android:startColor="#050085"
                android:endColor="#05003A"/>
            <corners
                android:bottomLeftRadius="40dp"
                android:bottomRightRadius="40dp"/>
        </shape>
    </item>


    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="500dp"
                android:centerX="1.0"
                android:centerY="0.0"
                android:endColor="#008BF692"
                android:centerColor="#D9407CA2"
                android:startColor="#808BF692"/>
            <corners
                android:bottomLeftRadius="40dp"
                android:bottomRightRadius="40dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="600dp"
                android:centerX="0.9"
                android:centerY="0.1"
                android:endColor="#008BF692"
                android:centerColor="#8046A3EF"
                android:startColor="#67ED6F"/>
            <corners
                android:bottomLeftRadius="40dp"
                android:bottomRightRadius="40dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="350dp"
                android:centerX="0.0"
                android:centerY="1.12"
                android:endColor="#008BF692"
                android:startColor="#3188EB"/>
            <corners
                android:bottomLeftRadius="40dp"
                android:bottomRightRadius="40dp"/>
        </shape>
    </item>
</layer-list>
